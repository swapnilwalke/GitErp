<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class
        name="com.virtusa.akura.api.dto.StudentStatus"
        table="STUDENT_STATUS" >

        <id
            name="studentStatusId"
            column="STUDENT_STATUS_ID"
            type="integer" >

            <generator class="increment" />
        </id>

        <property
            name="description"
            column="DESCRIPTION"
            not-null="true"
            type="string" />

        <property
            name="modifiedTime"
            column="MODIFIED_TIME"
            generated="always"
            not-null="true"
            type="timestamp" />
    </class>

    <query name="getStudentStatusByName" >

<![CDATA[
		   from com.virtusa.akura.api.dto.StudentStatus as studentStatus
		   where (studentStatus.description=?)
  		]]>
    </query>
    
    <query name="getAnyStudentStatus" >

	<![CDATA[
		   from com.virtusa.akura.api.dto.StudentStatus as studentStatus
		   where (studentStatus.studentStatusId > 1)
		   
  		]]>
    </query>
    
</hibernate-mapping>