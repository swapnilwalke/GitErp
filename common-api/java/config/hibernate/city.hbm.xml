<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.virtusa.akura.api.dto.City" table="CITY" lazy="false">
        <id name="cityId" type="int">
            <column name="CITY_ID" />
            <generator class="increment" />
        </id>
        <many-to-one name="district" class="com.virtusa.akura.api.dto.District" fetch="select" >
            <column name="DISTRICT_ID" />
        </many-to-one>
        <property name="description" type="string" column="DESCRIPTION" not-null="true" />
        <property name="modifiedTime" type="timestamp" column="MODIFIED_TIME" not-null="true"
		generated="always"/>
     </class>
     <sql-query name="findCityByDescription" cacheable="false" callable="false">
  		<return alias="city" class="com.virtusa.akura.api.dto.City" lock-mode="read" />
   		<![CDATA[
			SELECT * FROM CITY
  			WHERE description LIKE ? '%'
		]]>
 	 </sql-query>
</hibernate-mapping>
