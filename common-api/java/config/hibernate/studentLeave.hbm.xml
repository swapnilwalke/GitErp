<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.virtusa.akura.api.dto.StudentLeave" table="STUDENT_LEAVE">
		<id name="studentLeaveId" type="integer" column="STUDENT_LEAVE_ID">
			<generator class="increment" />
		</id>
		<property name="studentId" type="int" column="STUDENT_ID"
			not-null="true" />
		<property name="reason" type="string" column="REASON"
			not-null="false" />
		<property name="fromDate" type="date" column="FROM_DATE"
			not-null="true" />
		<property name="toDate" type="date" column="TO_DATE"
			not-null="true" />
			<property name="certificategiven" type="boolean" column="CERTIFICATE_GIVEN"
			not-null="true" />
		<property name="noOfDays" type="int" column="NO_OF_DAYS"
			not-null="true" />
		<property name="modifiedTime" type="timestamp" column="MODIFIED_TIME"
			not-null="true" generated="always" />
		<property name="checkAutoGenerated" type="boolean" column="CHECK_AUTOGENERATED"
			not-null="true"/>
	</class>

	<query name="getStudentLeaveByStudentId">
   			<![CDATA[
		 		from com.virtusa.akura.api.dto.StudentLeave studentLeave
 		 		Where studentLeave.studentId = ?
			]]>
	</query>

	<query name="getStudentLeave">
   			<![CDATA[
		 		FROM com.virtusa.akura.api.dto.StudentLeave studentLeave
 		 		WHERE studentLeave.studentId = ?
 		 		AND fromDate
 		 		BETWEEN ? AND ?
			]]>
	</query>

	<query name="findStudentLeave">
   			<![CDATA[
		 		FROM com.virtusa.akura.api.dto.StudentLeave studentLeave
 		 		WHERE studentLeave.studentId = ?
 		 		AND (fromDate BETWEEN ? AND ? OR toDate BETWEEN ? AND ? OR ? BETWEEN fromDate AND toDate OR ? BETWEEN fromDate AND toDate)
			]]>
	</query>
	
	<query name="checkTodayIsWithinLeavePeriod">
	    <![CDATA[
	    	FROM com.virtusa.akura.api.dto.StudentLeave studentLeave
	    	WHERE studentLeave.studentId = ?
	    	AND current_date() BETWEEN fromDate AND toDate
	    
	    ]]>
	    
	</query>

	<query name="checkSelectedDateIsWithinLeavePeriod">
	    <![CDATA[
	    	FROM com.virtusa.akura.api.dto.StudentLeave studentLeave
	    	WHERE studentLeave.studentId = ?
	    	AND ? >= fromDate AND ? < toDate
	    
	    ]]>
	    
	</query>

	<sql-query name="getStudentPresentDaysList">
	    <![CDATA[
	    	SELECT sa.date from STUDENT_LEAVE sl RIGHT JOIN DAILY_STUDENT_ATTENDANCE sa 
			on (sl.student_id = sa.student_id) 
			WHERE (sa.date BETWEEN ? AND ?) AND sa.student_id=?;
	    
	    ]]>
	</sql-query>
</hibernate-mapping>