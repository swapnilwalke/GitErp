<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.virtusa.akura.api.dto.Sport" table="SPORT">
		<id name="sportId" type="integer" column="SPORT_ID">
			<generator class="increment" />
		</id>
		<property name="description" type="string" column="DESCRIPTION"
			not-null="true" />
		<property name="modifiedTime" column="MODIFIED_TIME" type="timestamp"
			not-null="true" generated="always" />
		<set name="sportCategories" inverse="true">
			<key column="SPORT_ID" not-null="true" />
			<one-to-many class="com.virtusa.akura.api.dto.SportCategory" />
		</set>
	</class>
	<query name="getAnySportByName">
		<![CDATA[
		   from com.virtusa.akura.api.dto.Sport as sport
		   where (sport.description=?)
  		]]>
	</query>
</hibernate-mapping>