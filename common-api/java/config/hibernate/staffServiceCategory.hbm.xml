<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.virtusa.akura.api.dto.StaffServiceCategory" table="STAFF_SERVICE_CATEGORY">
		<id name="serviceId" column="STAFF_SERVICE_CATEGORY_ID" type="integer">
			<generator class="increment" />
		</id>
		<property name="description" column="DESCRIPTION" type="string"
			not-null="true" />
		<property name="modifiedTime" column="MODIFIED_TIME" type="timestamp"
			not-null="true" generated="always" />
	</class>
	
	<query name="getStaffServiceCategoryByName">
	
		<![CDATA[
			from com.virtusa.akura.api.dto.StaffServiceCategory as staffServiceCategory
			where (staffServiceCategory.description = ?)
		]]>
	</query>
	
</hibernate-mapping>