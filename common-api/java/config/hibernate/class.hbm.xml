<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.virtusa.akura.api.dto.SchoolClass" table="CLASS">
        <id name="classId" type="int">
            <column name="CLASS_ID" />
            <generator class="increment" />
        </id>
        <property name="description" type="string" column="DESCRIPTION" not-null="true" />
        <property name="modifiedTime" type="timestamp" column="MODIFIED_TIME" not-null="true"
		generated="always"/>

        <set name="classGrades" inverse="true">
            <key column="CLASS_ID" not-null="true" />
            <one-to-many class="com.virtusa.akura.api.dto.ClassGrade" />
        </set>
    </class>
</hibernate-mapping>
