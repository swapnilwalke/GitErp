<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.virtusa.akura.api.dto.Term" table="TERM">
		<id name="termId" column="TERM_ID" type="integer">
			<generator class="increment" />
		</id>
		<property name="description" column="DESCRIPTION" type="string"
			not-null="true" />
		<property name="fromMonth" column="FROM_MONTH" type="date"
			not-null="true" />
		<property name="toMonth" column="TO_MONTH" type="date"
			not-null="true" />
		<property name="modifiedTime" column="MODIFIED_TIME" type="timestamp"
			not-null="true" generated="always" />
	</class>
	
	<query name="getTermByName">
		<![CDATA[
		   from com.virtusa.akura.api.dto.Term as term
		   where ((term.description=?) AND ((term.fromMonth=?) AND (term.toMonth=?)))
  		]]>
	</query>
	<query name="getNoOfTerms">
		<![CDATA[
		   SELECT COUNT(term.termId)
		   FROM com.virtusa.akura.api.dto.Term as term
  		]]>
	</query>
</hibernate-mapping>