<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.virtusa.akura.api.dto.RoleTab" table="ROLE_TAB">
		<id name="roleTabId" type="int">
			<column name="ROLE_TAB_ID" />
			<generator class="increment" />
		</id>
		<many-to-one name="role" class="com.virtusa.akura.api.dto.UserRole"
			fetch="select" lazy="false">
			<column name="USER_ROLE_ID" not-null="true" />
		</many-to-one>
		<many-to-one name="tab" class="com.virtusa.akura.api.dto.Tab"
			fetch="select">
			<column name="TAB_ID" not-null="true" />
		</many-to-one>
		<property name="modifiedTime" type="timestamp" column="MODIFIED_TIME"
			not-null="true" generated="always" />
	</class>

	<query name="getRoleTabsByUserRole">
    <![CDATA[
			from	com.virtusa.akura.api.dto.RoleTab roleTab
			where	(roleTab.role = ?)
			]]>
	</query>
	
	<query name="getTabsByUserRole">
    <![CDATA[
    		select roleTab.tab
			from	com.virtusa.akura.api.dto.RoleTab roleTab
			where	(roleTab.role = ?)
			]]>
    </query>
</hibernate-mapping>