<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.virtusa.akura.api.dto.StudentScholarship" table="STUDENT_SCHOLARSHIP">
		<id name="studentScholarshipId" type="int" column="STUDENT_SCHOLARSHIP_ID">
			<generator class="increment" />
		</id>
		<many-to-one name="scholarship" class="com.virtusa.akura.api.dto.Scholarship"
			fetch="select" lazy="false">
			<column name="SCHOLARSHIP_ID" not-null="true" unique="true" />
		</many-to-one>
		<many-to-one name="student" class="com.virtusa.akura.api.dto.Student"
			fetch="select" lazy="false">
			<column name="STUDENT_ID" not-null="true" unique="true" />
		</many-to-one>
		<property name="year" type="date">
			<column name="YEAR" length="10" not-null="true" unique="true" />
		</property>
		<property name="comments" type="string">
			<column name="COMMENTS" length="150" />
		</property>
		<property name="modifiedTime" type="timestamp" generated="always">
			<column name="MODIFIED_TIME" length="19" not-null="true" />
		</property>
	</class>
	<query name="viewStudentScholarshipDetailsByStudentId">
   			<![CDATA[
		 		from com.virtusa.akura.api.dto.StudentScholarship studentscholarship
 		 		Where studentscholarship.student.studentId = ?
 		 		AND year(studentscholarship.year) = ?
			]]>
	</query>

	<query name="getStudentScholarshipDetailsByStudentIdOnly">
   			<![CDATA[
		 		FROM com.virtusa.akura.api.dto.StudentScholarship studentscholarship
 		 		WHERE studentscholarship.student.studentId = ?
			]]>
	</query>
	<query name="findScholarshipNameByStudentKey">
   			<![CDATA[
   				SELECT studentscholarship.scholarship.name
		 		FROM com.virtusa.akura.api.dto.StudentScholarship studentscholarship
 		 		WHERE studentscholarship.student.studentId = ?
 		 		AND studentscholarship.year = ?
			]]>
	</query>
</hibernate-mapping>
